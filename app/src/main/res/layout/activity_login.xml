<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:background="@color/colorPrimary">

    <EditText
            android:textColorHint="@color/colorLight"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextUsername" android:layout_marginTop="8dp"
            android:paddingLeft="20dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textColor="@android:color/background_light"
            android:hint="Username" android:background="@drawable/rounded_edittext" android:textSize="18sp"
            app:layout_constraintVertical_bias="0.32999998"/>
    <EditText
            android:textColorHint="@color/colorLight"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextPassword" android:layout_marginTop="16dp"
            android:paddingLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextUsername"
            app:layout_constraintEnd_toEndOf="@+id/editTextUsername"
            app:layout_constraintStart_toStartOf="@+id/editTextUsername" android:hint="Password"
            android:background="@drawable/rounded_edittext"/>
    <Button
            android:text="Log In"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/button" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
            app:layout_constraintEnd_toEndOf="@+id/editTextPassword"
            app:layout_constraintStart_toStartOf="@+id/editTextPassword" android:background="@drawable/rounded_button"
            android:textColor="@color/colorPrimaryDark" android:textSize="18sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>